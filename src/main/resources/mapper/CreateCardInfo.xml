<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xyf.dao.CreateCardDao" >


    <insert id="CreateCardInfo" parameterType="com.xyf.dto.CreateCardInfoDTO">
      INSERT into createcardinfo
      (user_id,real_name,phone,bank_name,id_number,create_time)
      values (#{userId},#{realName},#{phone},#{bankName},#{idNumber},#{createTime})
    </insert>

    <select id="getUserByPhone" parameterType="java.lang.String" resultType="com.xyf.entity.manager.CreateCardInfo">
        SELECT
        user_id userId,id_number idNumber,real_name realName,bank_name bankName,create_time createTime,`status` status,phone phone
        FROM createcardinfo where phone =#{phone}
    </select>

</mapper>